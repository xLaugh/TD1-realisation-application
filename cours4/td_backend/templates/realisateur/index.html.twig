{% extends 'base.html.twig' %}

{% block title %}Hello RealisateurController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <h1>Liste des réalisateurs</h1>

    {% if realisateurs is empty %}
        <p>Aucun réalisateur en base.</p>
    {% else %}
        <ul>
            {% for realisateur in realisateurs %}
                <li>
                    <strong>{{ realisateur.prenom }} {{ realisateur.nom }}</strong><br>
                    Film :
                    {% if realisateur.filmId %}
                        {{ realisateur.filmId.titre }}
                    {% else %}
                        <em>Aucun film associé</em>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</div>
{% endblock %}
